.billBoard
  position relative
  width 100%
  height: 100vh
  overflow hidden
  color: white
  .info
    padding: 30px
    width: 40%
    background-color rgba(0,0,0,0.5)
  h1
    font-weight 100
    font-size 5em
    margin auto
  h3
    font-weight 100
    font-size 2em
    margin auto
  .bgImage
    position absolute
    top 0
    width 100%
    min-width 1100px
    z-index 0
    min-height 100vh
  .content
    position relative
    z-index 1
    height: 100vh
.topBill
  .info
    position absolute
    bottom 100px
    left 20px
