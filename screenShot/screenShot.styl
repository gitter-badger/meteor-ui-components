$radius = 6px
.screenShot
  display flex
  width 100%
  background-color #eee
.browser
  display flex
  flex-direction column
  width 600px
  margin auto
  .head
    display flex
    flex-wrap nowrap
    height: 60px
    width 100%
    border-top-left-radius $radius
    border-top-right-radius $radius
    background-color #444
    .buttons
      align-items center
      display flex
      flex-direction: row
      margin-left 10px
    .button
      background-color #CCC
      border-radius 100%
      height: 20px
      width: 20px
      display flex
      align-self auto
      margin 4px
  .body
    width 100%
    height: 400px
    background-color #777
    border-bottom-right-radius $radius
    border-bottom-left-radius $radius
